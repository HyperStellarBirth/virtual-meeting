{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "MERP, Inc.",
        "websiteUrl": "https://www.merpsystems.com",
        "privacyUrl": "${{TAB_ENDPOINT}}/index.html#/privacy",
        "termsOfUseUrl": "${{TAB_ENDPOINT}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "TalentSphere Connect",
        "full": "Streamlined Interviews, Unleashing Potential."
    },
    "description": {
        "short": "Streamlined Interviews, Unleashing Potential.",
        "full": "Revolutionize your hiring process with our virtual interview platform. Efficient, user-friendly, and designed for the modern workforce. Simplify candidate evaluations, save time, and make informed decisions. Explore a seamless interview experience that transcends boundaries."
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "${{TAB_ENDPOINT}}/index.html#/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
              ],
              "context": [
                "meetingSidePanel",
                "meetingStage"
              ]
        }
    ],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}"
    ],
    "devicePermissions": [
        "media"
      ],
    "showLoadingIndicator": false
}